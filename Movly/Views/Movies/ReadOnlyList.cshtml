@model IEnumerable<Movly.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<br /><br />

    <table id="movies" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
 

@section scripts
{
    <script>
        $(document).ready(function () {

            // Data Table
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    //first column
                    {
                        data: "name"
                    },
                    //second column
                    {
                        data: "genre.name"  
                    }
                ]
            });
        });
    </script>
}
